{
    "apiVersion": "apps/v1beta2",
    "kind": "Deployment",
    "metadata": {
        "name": "peer2-org1",
        "namespace": "org1",
        "labels": {}
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "hyperledger",
                "role": "peer",
                "peer-id": "peer2",
                "org": "org1"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "hyperledger",
                    "role": "peer",
                    "peer-id": "peer2",
                    "org": "org1"
                }
            },
            "spec": {
                "affinity": {
                    "podAntiAffinity": {
                        "requiredDuringSchedulingIgnoredDuringExecution": [
                            {
                                "labelSelector": {
                                    "matchLabels": {
                                        "role": "peer"
                                    }
                                },
                                "namespaces": [
                                    "org1",
                                    "ordererorg"
                                ],
                                "topologyKey": "kubernetes.io/hostname"
                            }
                        ]
                    },
                    "nodeAffinity": {
                        "requiredDuringSchedulingIgnoredDuringExecution": {
                            "nodeSelectorTerms": [
                                {
                                    "matchExpressions": [
                                        {
                                            "key": "kops.k8s.io/instancegroup",
                                            "operator": "NotIn",
                                            "values": [
                                                "loadgenerator"
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                "initContainers": [
                    {
                        "name": "funnel",
                        "image": "kubechain/funnel:1.1.0",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [],
                        "env": [],
                        "volumeMounts": [
                            {
                                "name": "f102c1ae-f67f-50b8-ba42-79bd2bb61f2c-volume",
                                "mountPath": "/usr/src/app/from/peers/peer2.org1/msp/admincerts"
                            },
                            {
                                "name": "86aa838a-f5e1-5212-b18d-2946b8b3e9e0-volume",
                                "mountPath": "/usr/src/app/from/peers/peer2.org1/msp/cacerts"
                            },
                            {
                                "name": "b19be0e7-972a-53c7-b082-41a906628aa6-volume",
                                "mountPath": "/usr/src/app/from/peers/peer2.org1/msp/keystore"
                            },
                            {
                                "name": "10f397ba-60c6-52de-8de6-beaafd4ecedf-volume",
                                "mountPath": "/usr/src/app/from/peers/peer2.org1/msp/signcerts"
                            },
                            {
                                "name": "5e746ad5-5ebd-549d-b8a6-8a5f36f6cb68-volume",
                                "mountPath": "/usr/src/app/from/peers/peer2.org1/msp/tlscacerts"
                            },
                            {
                                "name": "5de57987-2c92-5d07-b70a-6fb83fd1011a-volume",
                                "mountPath": "/usr/src/app/from/peers/peer2.org1/tls"
                            },
                            {
                                "name": "peer2-pvc-volume",
                                "mountPath": "/usr/src/app/to/peers/peer2.org1",
                                "subPath": "peers/peer2.org1"
                            }
                        ]
                    }
                ],
                "containers": [
                    {
                        "name": "peer2-org1",
                        "image": "hyperledger/fabric-peer:1.2.0",
                        "imagePullPolicy": "IfNotPresent",
                        "securityContext": {
                            "privileged": true
                        },
                        "command": [
                            "/bin/bash",
                            "-c",
                            "--"
                        ],
                        "args": [
                            "sleep 5; peer node start"
                        ],
                        "ports": [
                            {
                                "containerPort": 7051
                            },
                            {
                                "containerPort": 7052
                            },
                            {
                                "containerPort": 7053
                            }
                        ],
                        "env": [
                            {
                                "name": "CORE_VM_ENDPOINT",
                                "value": "unix:///host/var/run/docker.sock"
                            },
                            {
                                "name": "CORE_LOGGING_LEVEL",
                                "value": "DEBUG"
                            },
                            {
                                "name": "CORE_PEER_TLS_ENABLED",
                                "value": "false"
                            },
                            {
                                "name": "CORE_PEER_GOSSIP_USELEADERELECTION",
                                "value": "true"
                            },
                            {
                                "name": "CORE_PEER_GOSSIP_ORGLEADER",
                                "value": "false"
                            },
                            {
                                "name": "CORE_PEER_PROFILE_ENABLED",
                                "value": "true"
                            },
                            {
                                "name": "CORE_PEER_TLS_CERT_FILE",
                                "value": "/etc/hyperledger/fabric/tls/server.crt"
                            },
                            {
                                "name": "CORE_PEER_TLS_KEY_FILE",
                                "value": "/etc/hyperledger/fabric/tls/server.key"
                            },
                            {
                                "name": "CORE_PEER_TLS_ROOTCERT_FILE",
                                "value": "/etc/hyperledger/fabric/tls/ca.crt"
                            },
                            {
                                "name": "CORE_PEER_ID",
                                "value": "peer2.org1"
                            },
                            {
                                "name": "CORE_PEER_ADDRESS",
                                "value": "peer2.org1:7051"
                            },
                            {
                                "name": "CORE_PEER_CHAINCODELISTENADDRESS",
                                "value": "0.0.0.0:7052"
                            },
                            {
                                "name": "CORE_PEER_GOSSIP_EXTERNALENDPOINT",
                                "value": "peer2.org1:7051"
                            },
                            {
                                "name": "CORE_PEER_LOCALMSPID",
                                "value": "Org1"
                            },
                            {
                                "name": "CORE_VM_DOCKER_HOSTCONFIG_DNS",
                                "value": "100.64.0.10"
                            },
                            {
                                "name": "CORE_VM_DOCKER_HOSTCONFIG_DNSSEARCH",
                                "value": "default.svc.cluster.local svc.cluster.local"
                            },
                            {
                                "name": "CORE_CHAINCODE_LOGGING_LEVEL",
                                "value": "debug"
                            },
                            {
                                "name": "CORE_CHAINCODE_SHIM",
                                "value": "debug"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "peer-data-volume",
                                "mountPath": "/var/hyperledger"
                            },
                            {
                                "name": "peer2-pvc-volume",
                                "mountPath": "/etc/hyperledger/fabric/tls",
                                "subPath": "peers/peer2.org1/tls"
                            },
                            {
                                "name": "peer2-pvc-volume",
                                "mountPath": "/etc/hyperledger/fabric/msp",
                                "subPath": "peers/peer2.org1/msp"
                            },
                            {
                                "name": "3b0e429c-a887-5b76-8f2c-08257a14ded0-volume",
                                "mountPath": "/opt/gopath/src/github.com/hyperledger/fabric/peer/chaincodes/simple-addition-chaincode"
                            },
                            {
                                "name": "run-volume",
                                "mountPath": "/host/var/run/"
                            }
                        ],
                        "workingDir": "/opt/gopath/src/github.com/hyperledger/fabric/peer"
                    }
                ],
                "volumes": [
                    {
                        "name": "peer-data-volume",
                        "emptyDir": {}
                    },
                    {
                        "name": "run-volume",
                        "hostPath": {
                            "path": "/var/run",
                            "type": "DirectoryOrCreate"
                        }
                    },
                    {
                        "name": "peer2-pvc-volume",
                        "persistentVolumeClaim": {
                            "claimName": "peer2-pvc"
                        }
                    },
                    {
                        "name": "f102c1ae-f67f-50b8-ba42-79bd2bb61f2c-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "Admin-org1-cert.pem",
                                    "path": "Admin@org1-cert.pem"
                                }
                            ],
                            "name": "f102c1ae-f67f-50b8-ba42-79bd2bb61f2c",
                            "optional": false
                        }
                    },
                    {
                        "name": "86aa838a-f5e1-5212-b18d-2946b8b3e9e0-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "ca.org1-cert.pem",
                                    "path": "ca.org1-cert.pem"
                                }
                            ],
                            "name": "86aa838a-f5e1-5212-b18d-2946b8b3e9e0",
                            "optional": false
                        }
                    },
                    {
                        "name": "b19be0e7-972a-53c7-b082-41a906628aa6-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "90038ffbccd8f082dcd0173547a54062aa28e528a2e8960298ba40e658545225_sk",
                                    "path": "90038ffbccd8f082dcd0173547a54062aa28e528a2e8960298ba40e658545225_sk"
                                }
                            ],
                            "name": "b19be0e7-972a-53c7-b082-41a906628aa6",
                            "optional": false
                        }
                    },
                    {
                        "name": "10f397ba-60c6-52de-8de6-beaafd4ecedf-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "peer2.org1-cert.pem",
                                    "path": "peer2.org1-cert.pem"
                                }
                            ],
                            "name": "10f397ba-60c6-52de-8de6-beaafd4ecedf",
                            "optional": false
                        }
                    },
                    {
                        "name": "5e746ad5-5ebd-549d-b8a6-8a5f36f6cb68-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "tlsca.org1-cert.pem",
                                    "path": "tlsca.org1-cert.pem"
                                }
                            ],
                            "name": "5e746ad5-5ebd-549d-b8a6-8a5f36f6cb68",
                            "optional": false
                        }
                    },
                    {
                        "name": "5de57987-2c92-5d07-b70a-6fb83fd1011a-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "ca.crt",
                                    "path": "ca.crt"
                                },
                                {
                                    "key": "server.crt",
                                    "path": "server.crt"
                                },
                                {
                                    "key": "server.key",
                                    "path": "server.key"
                                }
                            ],
                            "name": "5de57987-2c92-5d07-b70a-6fb83fd1011a",
                            "optional": false
                        }
                    },
                    {
                        "name": "3b0e429c-a887-5b76-8f2c-08257a14ded0-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "simple-addition-chaincode.go",
                                    "path": "simple-addition-chaincode.go"
                                }
                            ],
                            "name": "3b0e429c-a887-5b76-8f2c-08257a14ded0",
                            "optional": false
                        }
                    }
                ],
                "nodeSelector": {}
            }
        }
    }
}