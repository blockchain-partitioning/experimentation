{
    "apiVersion": "apps/v1beta2",
    "kind": "Deployment",
    "metadata": {
        "name": "peer30-org1",
        "namespace": "org1",
        "labels": {}
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "hyperledger",
                "role": "peer",
                "peer-id": "peer30",
                "org": "org1"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "hyperledger",
                    "role": "peer",
                    "peer-id": "peer30",
                    "org": "org1"
                }
            },
            "spec": {
                "affinity": {
                    "podAntiAffinity": {
                        "requiredDuringSchedulingIgnoredDuringExecution": [
                            {
                                "labelSelector": {
                                    "matchLabels": {
                                        "role": "peer"
                                    }
                                },
                                "namespaces": [
                                    "org1",
                                    "ordererorg"
                                ],
                                "topologyKey": "kubernetes.io/hostname"
                            }
                        ]
                    },
                    "nodeAffinity": {
                        "requiredDuringSchedulingIgnoredDuringExecution": {
                            "nodeSelectorTerms": [
                                {
                                    "matchExpressions": [
                                        {
                                            "key": "kops.k8s.io/instancegroup",
                                            "operator": "NotIn",
                                            "values": [
                                                "loadgenerator"
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    }
                },
                "initContainers": [
                    {
                        "name": "funnel",
                        "image": "kubechain/funnel:1.1.0",
                        "imagePullPolicy": "IfNotPresent",
                        "ports": [],
                        "env": [],
                        "volumeMounts": [
                            {
                                "name": "f69a37d4-c986-5cc7-833c-1386100bfa9f-volume",
                                "mountPath": "/usr/src/app/from/peers/peer30.org1/msp/admincerts"
                            },
                            {
                                "name": "8ea76459-285f-5d9f-a95b-0c5dde350ded-volume",
                                "mountPath": "/usr/src/app/from/peers/peer30.org1/msp/cacerts"
                            },
                            {
                                "name": "0382c3c9-20ff-58d0-b848-c8383a700ae0-volume",
                                "mountPath": "/usr/src/app/from/peers/peer30.org1/msp/keystore"
                            },
                            {
                                "name": "414455ef-8c5b-5f4e-bf7a-38fe45382f9e-volume",
                                "mountPath": "/usr/src/app/from/peers/peer30.org1/msp/signcerts"
                            },
                            {
                                "name": "b08a1873-90cb-577c-a579-af3cb3f3e3c3-volume",
                                "mountPath": "/usr/src/app/from/peers/peer30.org1/msp/tlscacerts"
                            },
                            {
                                "name": "c6e55321-4a91-58b9-828b-d06a36f26856-volume",
                                "mountPath": "/usr/src/app/from/peers/peer30.org1/tls"
                            },
                            {
                                "name": "peer30-pvc-volume",
                                "mountPath": "/usr/src/app/to/peers/peer30.org1",
                                "subPath": "peers/peer30.org1"
                            }
                        ]
                    }
                ],
                "containers": [
                    {
                        "name": "peer30-org1",
                        "image": "hyperledger/fabric-peer:1.2.0",
                        "imagePullPolicy": "IfNotPresent",
                        "securityContext": {
                            "privileged": true
                        },
                        "command": [
                            "/bin/bash",
                            "-c",
                            "--"
                        ],
                        "args": [
                            "sleep 5; peer node start"
                        ],
                        "ports": [
                            {
                                "containerPort": 7051
                            },
                            {
                                "containerPort": 7052
                            },
                            {
                                "containerPort": 7053
                            }
                        ],
                        "env": [
                            {
                                "name": "CORE_VM_ENDPOINT",
                                "value": "unix:///host/var/run/docker.sock"
                            },
                            {
                                "name": "CORE_LOGGING_LEVEL",
                                "value": "DEBUG"
                            },
                            {
                                "name": "CORE_PEER_TLS_ENABLED",
                                "value": "false"
                            },
                            {
                                "name": "CORE_PEER_GOSSIP_USELEADERELECTION",
                                "value": "true"
                            },
                            {
                                "name": "CORE_PEER_GOSSIP_ORGLEADER",
                                "value": "false"
                            },
                            {
                                "name": "CORE_PEER_PROFILE_ENABLED",
                                "value": "true"
                            },
                            {
                                "name": "CORE_PEER_TLS_CERT_FILE",
                                "value": "/etc/hyperledger/fabric/tls/server.crt"
                            },
                            {
                                "name": "CORE_PEER_TLS_KEY_FILE",
                                "value": "/etc/hyperledger/fabric/tls/server.key"
                            },
                            {
                                "name": "CORE_PEER_TLS_ROOTCERT_FILE",
                                "value": "/etc/hyperledger/fabric/tls/ca.crt"
                            },
                            {
                                "name": "CORE_PEER_ID",
                                "value": "peer30.org1"
                            },
                            {
                                "name": "CORE_PEER_ADDRESS",
                                "value": "peer30.org1:7051"
                            },
                            {
                                "name": "CORE_PEER_CHAINCODELISTENADDRESS",
                                "value": "0.0.0.0:7052"
                            },
                            {
                                "name": "CORE_PEER_GOSSIP_EXTERNALENDPOINT",
                                "value": "peer30.org1:7051"
                            },
                            {
                                "name": "CORE_PEER_LOCALMSPID",
                                "value": "Org1"
                            },
                            {
                                "name": "CORE_VM_DOCKER_HOSTCONFIG_DNS",
                                "value": "100.64.0.10"
                            },
                            {
                                "name": "CORE_VM_DOCKER_HOSTCONFIG_DNSSEARCH",
                                "value": "default.svc.cluster.local svc.cluster.local"
                            },
                            {
                                "name": "CORE_CHAINCODE_LOGGING_LEVEL",
                                "value": "debug"
                            },
                            {
                                "name": "CORE_CHAINCODE_SHIM",
                                "value": "debug"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "peer-data-volume",
                                "mountPath": "/var/hyperledger"
                            },
                            {
                                "name": "peer30-pvc-volume",
                                "mountPath": "/etc/hyperledger/fabric/tls",
                                "subPath": "peers/peer30.org1/tls"
                            },
                            {
                                "name": "peer30-pvc-volume",
                                "mountPath": "/etc/hyperledger/fabric/msp",
                                "subPath": "peers/peer30.org1/msp"
                            },
                            {
                                "name": "3b0e429c-a887-5b76-8f2c-08257a14ded0-volume",
                                "mountPath": "/opt/gopath/src/github.com/hyperledger/fabric/peer/chaincodes/simple-addition-chaincode"
                            },
                            {
                                "name": "run-volume",
                                "mountPath": "/host/var/run/"
                            }
                        ],
                        "workingDir": "/opt/gopath/src/github.com/hyperledger/fabric/peer"
                    }
                ],
                "volumes": [
                    {
                        "name": "peer-data-volume",
                        "emptyDir": {}
                    },
                    {
                        "name": "run-volume",
                        "hostPath": {
                            "path": "/var/run",
                            "type": "DirectoryOrCreate"
                        }
                    },
                    {
                        "name": "peer30-pvc-volume",
                        "persistentVolumeClaim": {
                            "claimName": "peer30-pvc"
                        }
                    },
                    {
                        "name": "f69a37d4-c986-5cc7-833c-1386100bfa9f-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "Admin-org1-cert.pem",
                                    "path": "Admin@org1-cert.pem"
                                }
                            ],
                            "name": "f69a37d4-c986-5cc7-833c-1386100bfa9f",
                            "optional": false
                        }
                    },
                    {
                        "name": "8ea76459-285f-5d9f-a95b-0c5dde350ded-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "ca.org1-cert.pem",
                                    "path": "ca.org1-cert.pem"
                                }
                            ],
                            "name": "8ea76459-285f-5d9f-a95b-0c5dde350ded",
                            "optional": false
                        }
                    },
                    {
                        "name": "0382c3c9-20ff-58d0-b848-c8383a700ae0-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "314b35df5fe63213cca351fca0ffaf4cd3618c5f27600fe263c5cbdae7e681e5_sk",
                                    "path": "314b35df5fe63213cca351fca0ffaf4cd3618c5f27600fe263c5cbdae7e681e5_sk"
                                }
                            ],
                            "name": "0382c3c9-20ff-58d0-b848-c8383a700ae0",
                            "optional": false
                        }
                    },
                    {
                        "name": "414455ef-8c5b-5f4e-bf7a-38fe45382f9e-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "peer30.org1-cert.pem",
                                    "path": "peer30.org1-cert.pem"
                                }
                            ],
                            "name": "414455ef-8c5b-5f4e-bf7a-38fe45382f9e",
                            "optional": false
                        }
                    },
                    {
                        "name": "b08a1873-90cb-577c-a579-af3cb3f3e3c3-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "tlsca.org1-cert.pem",
                                    "path": "tlsca.org1-cert.pem"
                                }
                            ],
                            "name": "b08a1873-90cb-577c-a579-af3cb3f3e3c3",
                            "optional": false
                        }
                    },
                    {
                        "name": "c6e55321-4a91-58b9-828b-d06a36f26856-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "ca.crt",
                                    "path": "ca.crt"
                                },
                                {
                                    "key": "server.crt",
                                    "path": "server.crt"
                                },
                                {
                                    "key": "server.key",
                                    "path": "server.key"
                                }
                            ],
                            "name": "c6e55321-4a91-58b9-828b-d06a36f26856",
                            "optional": false
                        }
                    },
                    {
                        "name": "3b0e429c-a887-5b76-8f2c-08257a14ded0-volume",
                        "configMap": {
                            "items": [
                                {
                                    "key": "simple-addition-chaincode.go",
                                    "path": "simple-addition-chaincode.go"
                                }
                            ],
                            "name": "3b0e429c-a887-5b76-8f2c-08257a14ded0",
                            "optional": false
                        }
                    }
                ],
                "nodeSelector": {}
            }
        }
    }
}