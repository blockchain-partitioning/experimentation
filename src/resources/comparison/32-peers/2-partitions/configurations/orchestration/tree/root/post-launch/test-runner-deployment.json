                            },
                            {
                                "name": "178c7c52-fbfe-5d1a-b916-efec8b77365b-volume",
                                "mountPath": "/test-runner/network/channels/kubechain"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": 14,
                                "memory": "12Gi"
                            }
                        }
                    }
                ],
